<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:weightSum="1"
    >

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/botaoidoso1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:textSize="30dp"

        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:layout_marginTop="40dp"
            android:textSize="25sp"
            android:background="#00a8ec"
            android:layout_marginLeft="200dp"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:onClick="ediPerfil"
            />
</RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RemÃ©dios"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/editarMed"
            android:src="@drawable/editar"
            android:layout_marginLeft="40dp"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/novoMedi"
            android:src="@drawable/novomed"
            android:layout_marginLeft="10dp"
            android:onClick="novoMed"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listaMedicamentos"
            android:scrollbarSize="@dimen/activity_vertical_margin"
            >

        </ListView>
    </LinearLayout>
</LinearLayout>
